pkgname=plymouth-theme-manjaro-fancy-budgie
basename=manjaro-fancy-budgie
pkgver=1
pkgrel=1
pkgdesc="Manjaro Plymouth theme for Budgie Desktop."
arch=('any')
license=('GPL')
url="https://youtu.be/XFnqC13f7XI"
depends=('plymouth')
install=$basename.install
source=('https://github.com/Ste74/Aur-binary-repo/releases/download/v1.0/manjaro-fancy-budgie.tar.gz'
        'manjaro-fancy-budgie.install'
       )
md5sums=('65cbf84e539a729d88f2c7a4f7080c6c'
         '3ea23bac34516f532e47b3224f942e7e')

package() {
  cd $srcdir/manjaro-fancy-budgie
  mkdir -p $pkgdir/usr/share/plymouth/themes/manjaro-fancy-budgie
  install -Dm644 * $pkgdir/usr/share/plymouth/themes/manjaro-fancy-budgie
}
