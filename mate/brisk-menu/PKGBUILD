# Contributor: Philip MÃ¼ller (manjaro)

pkgname=brisk-menu
pkgver=0.1.0
pkgrel=1
_commit=8a4e5f7f440a7cb62921dda823888d5bf3dcd132
pkgdesc="An efficient menu for the MATE Desktop"
arch=('i686' 'x86_64')
url="https://github.com/solus-project/brisk-menu"
license=('GPL')
depends=('mate-panel-gtk3')
makedepends=('autogen')
source=("$pkgname-$pkgver-$pkgrel.tar.gz::${url}/archive/${_commit}.tar.gz")
sha256sums=('601a8ff1f93ad0321b4afa1021383be962e0c119d6e6c1e11cbc3b95f10cbb63')

build() {
  cd ${pkgname}-${_commit}
  ./autogen.sh \
        --prefix=/usr \
        --libdir=/usr/lib \
        --sysconfdir=/etc
  make
}


package() {
  cd ${pkgname}-${_commit}
  make DESTDIR="${pkgdir}/" install
}
