# Contributor: Philip MÃ¼ller (manjaro)

pkgname=brisk-menu
pkgver=0.0.1
pkgrel=2
_commit=995b3db33b61ec9dcdf7bba8803143df04e182bc
pkgdesc="An efficient menu for the MATE Desktop"
arch=('i686' 'x86_64')
url="https://github.com/solus-project/brisk-menu"
license=('GPL')
depends=('mate-panel-gtk3')
makedepends=('autogen')
source=("$pkgname-$pkgver-$pkgrel.tar.gz::${url}/archive/${_commit}.tar.gz")
sha256sums=('fd767a198e92dfc69eaee7894ca1ec519d56decc96e7b8fcf5870845cce63143')

build() {
  cd ${pkgname}-${_commit}
  ./autogen.sh \
        --prefix=/usr \
        --libdir=/usr/lib \
        --sysconfdir=/etc
  make
}


package() {
  cd ${pkgname}-${_commit}
  make DESTDIR="${pkgdir}/" install
}
