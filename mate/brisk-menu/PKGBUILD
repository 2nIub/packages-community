pkgname=brisk-menu
pkgver=0.1.2
pkgrel=1
#_commit=8a4e5f7f440a7cb62921dda823888d5bf3dcd132
pkgdesc="An efficient menu for the MATE Desktop"
arch=('i686' 'x86_64')
url="https://github.com/solus-project/brisk-menu"
license=('GPL')
depends=('mate-panel-gtk3')
#makedepends=('autogen')
#source=("$pkgname-$pkgver-$pkgrel.tar.gz::${url}/archive/${_commit}.tar.gz")
source=("${url}/releases/download/v$pkgver/$pkgname-$pkgver.tar.xz")
sha256sums=('1c03d61c8f674ffa86a8f2fb98ad3735d605cd4b4a2c0c014119357b967cafab')

build() {
  cd $srcdir/${pkgname}-${pkgver}
  ./configure \
	--prefix=/usr \
        --libdir=/usr/lib \
        --sysconfdir=/etc
  make
}


package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR="${pkgdir}/" install
}
