# Maintainer: Bernhard Landauer <oberon@manjaro.org>
# Contributor: Thorsten TÃ¶pper <atsutane-tu@freethoughts.de>

pkgname=i3status-manjaro
pkgver=2.9
pkgrel=4
pkgdesc='customized status bar for manjaro-i3, dzen2 or xmobar'
arch=('i686' 'x86_64')
url='http://i3.zekjur.net/i3status/'
license=('BSD')
groups=('i3')
depends=('i3-wm'
	'wireless_tools'
	'confuse'
	'alsa-lib'
	'yajl'
	'ttf-font-icons')
conflicts=('i3status')
provides=('i3status')
makedepends=('asciidoc')
backup=('etc/i3status.conf')
install=$pkgname.install
options=('docs')
source=("git://github.com/oberon2007/$pkgname.git")
md5sums=('SKIP')

build() {
  cd "$srcdir/$pkgname"
  make
}

package() {
  cd "$srcdir/$pkgname"
  make DESTDIR="$pkgdir" install
  install -Dm644 LICENSE $pkgdir/usr/share/licenses/i3status/LICENSE
  make clean
}
