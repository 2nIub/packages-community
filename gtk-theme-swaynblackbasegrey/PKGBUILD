pkgver=1.8
pkgrel=1
pkgdesc="Sway-N Black-Base GREY GTK2/3 theme"
arch=('any')
url="http://gnome-look.org/content/show.php/Sway+Black-Base+GREY?content=153871"
license=('GPL')
#depends=('gtk3')
#makedepends=('')
#optdepends=('')
#conflicts=('')
#provides=('')
#replaces=('')
#install="$pkgname".install
source=('Sway-N_Black-Base_GREY.tar.gz')
sha1sums=('dd4464153477b16fb56142b2fab527408c266a5d')

package() {
  mkdir -p "$pkgdir"/usr/share/themes
  cp -r "$srcdir/Sway-N Black-Base GREY" "$pkgdir"/usr/share/themes
}
