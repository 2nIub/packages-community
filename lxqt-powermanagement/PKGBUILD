# Contributor: Antonio Rojas

pkgname=lxqt-powermanagement
pkgver=0.9.0
pkgrel=0.1
pkgdesc="Daemon use for power management and auto-suspend"
arch=('i686' 'x86_64')
url='http://lxqt.org/'
license=('LGPL')
groups=('lxqt')
depends=('liblxqt' 'qt5-svg' 'upower' 'hicolor-icon-theme')
makedepends=('cmake' 'qt5-tools')
install=$pkgname.install
source=("http://lxqt.org/downloads/lxqt/$pkgver/$pkgname-$pkgver.tar.xz")
sha256sums=('4602de9a9976307a74568cc729c6970c73dc06be5f972ade21eea6afb0c3006b')

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../$pkgname-$pkgver \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir" install
}
