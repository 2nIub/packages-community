pkgname=maia-themes
pkgver=0.1.0
pkgrel=1
_gitcommit=011558eeb4baf049c9ebf4fe4299b6a2466bb67c
pkgdesc='Maia Look & Feel theme files'
url='https://github.com/manjaro/artwork-maia/'
arch=('any')
license=('LGPL')
depends=('plasma-framework')
makedepends=('extra-cmake-modules')
conflicts=('kde-kdm-themes-maia'
           'kde-ksplash-themes-maia'
           'kde-plasma-themes-maia' 
           'maia-colors' 
           'wallpapers-maia')
replaces=('kde-kdm-themes-maia'
          'kde-ksplash-themes-maia'
          'kde-plasma-themes-maia' 
          'maia-colors' 
          'wallpapers-maia')
source=("maia-$pkgver-$pkgrel.tar.gz::$url/archive/$_gitcommit.tar.gz")
md5sums=('SKIP')

prepare() {
  mv $srcdir/artwork-maia-$_gitcommit $srcdir/maia
}

build() {
  mkdir -p build
  cd build
  
  cmake ../maia \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON  
  make
}

package() {
  cd build

  make DESTDIR=${pkgdir} install
}
