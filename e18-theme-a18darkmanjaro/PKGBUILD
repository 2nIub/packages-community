pkgver=1.0
pkgrel=1
pkgdesc="Modified version of the default E18 Dark theme, from the Manjaro Enlightenment Edition"
arch=('any')
url="http://http://forum.manjaro.org/index.php?topic=2380.msg103950#msg103950"
license=('BSD')
depends=('enlightenment')
#makedepends=('')
#optdepends=('')
#conflicts=('')
#provides=('')
#replaces=('')
install="$pkgname".install
source=("A-18-Dark-Manjaro.edj")
sha1sums=('6b8a6890e8ea3938669db5166287ec2bd2191d40')

package() {
  install -Dm644 "$srcdir"/A-18-Dark-Manjaro.edj "$pkgdir"/usr/share/elementary/themes/A-18-Dark-Manjaro.edj
}
