pkgname=fetter
pkgver=1.1
pkgrel=1
pkgdesc="lightweight bash info grabber to display system information and manjaro text on terminal startup"
url="http://manjaroartwork.com"
license=('GPL')
arch=('any')
source=("http://manjaroartwork.freeiz.com/fetter/$pkgver-$pkgrel/fetter.zip")
sha512sums=('e326414066b95a3c9083f6170bcb8022294b32f80aa8b99328d5134073ec0aeea7b709e76f3907e89308a1a2e07b765c7a4bb8aa432bc5a1cbb6a7ba6b4a0335')
package() {
    mkdir -p $pkgdir/usr/bin
    mv $srcdir/fetter $pkgdir/usr/bin/fetter
    chmod +x $pkgdir/usr/bin/fetter
}
