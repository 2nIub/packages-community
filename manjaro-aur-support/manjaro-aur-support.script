#!/bin/bash

#Message for user

msg() {
ALL_OFF="\e[1;0m"
BOLD="\e[1;1m"
GREEN="${BOLD}\e[1;32m"
local mesg=$1; shift
printf "
${GREEN}==>${ALL_OFF}${BOLD} ${mesg}${ALL_OFF}" "$@" >&2
}

echo
msg "Warning
-> full access to AUR installed
-> please open this link
-> https://wiki.manjaro.org/index.php?title=AUR
-> and read carefull our wiki page"
echo

touch /.check-aur

