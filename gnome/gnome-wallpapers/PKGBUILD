# Maintainer: Stefano Capitani <stefano@manjaro.org>

pkgname=gnome-wallpapers
_repo=Gnome-Artwork
pkgver=20170102
pkgrel=1
_snapshot=c8815658d6e679d183fac594b4cf3fc062ea3434
pkgdesc='Manjaro Linux Gnome wallpapers'
arch=('any')
url="https://github.com/Ste74/$_repo"
license=('GPL')
source=("$_repo-$_snapshot.tar.gz::$url/archive/$_snapshot.tar.gz")
sha256sums=('d50e03ab711d676e5fc375c98505131509aa1f4326eba4447c6e5898b171899a')

pkgver() {
	date +%Y%m%d
}

package() {
	cd $srcdir
	install -dm755 $pkgdir/usr/share/backgrounds
	cd $_repo-$_snapshot
	rm README.md
	cp * $pkgdir/usr/share/backgrounds/
}
