# Maintainer: Bernhard Landauer <oberon@manjaro.org>
# Contributors: oleerik and rudregues @forum.manjaro.org

pkgname=pyplanemode
pkgver=20150907
pkgrel=1
pkgdesc="Simple GTK Python applet for airplanemode"
arch=('any')
url="https://forum.manjaro.org/index.php?topic=25864.msg220281#msg220281"
license=('GPL')
depends=('python2' 'gtk3' 'pygtk' 'rfkill')
source=("git://github.com/oleerik/$pkgname")
md5sums=('SKIP')

package() {
  cd "$srcdir"
  install -Dm755 "$srcdir/$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm644 "$srcdir/plane-on.svg" "$pkgdir/usr/share/icons/plane-on.svg"
  install -m644 "$srcdir/plane-off.svg" "$pkgdir/usr/share/icons/plane-off.svg"
}
