# Maintainer: Xu Fasheng <fasheng.xu[AT]gmail.com>

pkgname=deepin-session-ui-manjaro
pkgver=2.90.2
_commit=b56cacecae6046d58b35fa2679c0d50d994b3504
pkgrel=1
pkgdesc='deepin desktop-environment - dde session ui module'
arch=('i686' 'x86_64')
url="https://github.com/linuxdeepin/dde-session-ui"
license=('GPL3')
depends=('gsettings-qt'
	'libdui'
	'liblightdm-qt5'
	'qt5-svg')
makedepends=('git')
conflicts=('deepin-manjaro-workspace' 'dde-workspace')
source=("git+https://github.com/linuxdeepin/dde-session-ui.git#commit=$_commit")
sha256sums=('SKIP')

build() {
	cd "dde-session-ui"
	qmake-qt5 PREFIX=/usr
	make
}

package() {
	cd "dde-session-ui"
	make INSTALL_ROOT="${pkgdir}" install
}
