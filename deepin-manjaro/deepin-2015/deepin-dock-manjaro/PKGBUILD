_pkgname=dde-dock
pkgname=$_pkgname-manjaro
pkgver=2.90.0
_commit=8a4aa9f02340171b0038eb60b10212279746c6bd
pkgrel=2
pkgdesc='deepin desktop-environment - dock module'
arch=('i686' 'x86_64')
https://github.com/linuxdeepin/dde-dock.git
url="https://github.com/linuxdeepin/$_pkgname"
license=('GPL3')
depends=('gtk2'
	'libdui'
	'qt5-svg')
makedepends=('git')
conflicts=('dde-dock' 'deepin-dock' 'dde-dock-applets' 'deepin-dock-applets-manjaro')
source=("git+$url.git#commit=$_commit")
sha256sums=('SKIP')

build(){
	cd $_pkgname
	qmake-qt5 PREFIX=/usr
	make
}

package() {
	cd $_pkgname
	make INSTALL_ROOT="${pkgdir}" install
}
