pkgname=startdde-manjaro-2015
pkgver=2.92.0
_commit=18e8ea2eb38c51fdb4faaa0764cd47d6052da8b5
pkgrel=1
pkgdesc="starter of deepin desktop environment"
arch=('i686' 'x86_64')
url="https://github.com/linuxdeepin/startdde"
license=('GPL3')
makedepends=('cmake'
	'coffee-script'
	'deepin-dbus-factory'
	'deepin-wm-manjaro'
	'go-packages'
	'libdeepin-webkit'
	'python2'
	'webkitgtk')
source=("git+https://github.com/linuxdeepin/startdde.git#commit=$_commit")
md5sums=('SKIP')

build() {
	cd startdde
	make GOPATH="/usr/lib/go"
}

package() {
	depends+=('deepin-daemon-manjaro')
	cd startdde
	make GOPATH="/usr/lib/go" DESTDIR="${pkgdir}" install
}
