pkgname=deepin-desktop-base
pkgver=20170903
pkgrel=1
epoch=1
pkgdesc='Base component for Deepin'
arch=('any')
url="https://github.com/oberon2007/deepin-desktop-base"
license=('GPL3')
depends=('deepin-wallpapers')
makedepends=('git')
groups=('deepin')
source=("git+$url.git")
sha256sums=('SKIP')

pkgver() {
    date +%Y%m%d
}

build() {
  cd $pkgname
  make
}

package() {
  cd $pkgname
  make DESTDIR="$pkgdir" install
}
