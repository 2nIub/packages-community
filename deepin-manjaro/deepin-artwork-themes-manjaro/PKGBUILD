_pkgname=deepin-artwork-themes
pkgname=$_pkgname-manjaro
pkgver="$(date +'%Y%m%d')"
_snapshot=d701c14f598ec687b04587e5bb3fa0e0a95196ec
pkgrel=1
pkgdesc='Default artwork themes for Manjaro-Deepin'
arch=('any')
license=('LGPL3')
url="https://github.com/oberon2007/deepin-artwork-themes-manjaro"
depends=('cantarell-fonts'
	'deepin-icon-theme'
	'deepin-icontheme-pack'
	'deepin-wallpapers'
	'xcursor-chameleon-pearl-deepin')
makedepends=('python2' 'git')
conflicts=('deepin-artwork-themes')
provides=('deepin-artwork-themes')
source=("$pkgname.tar.gz::$url/archive/$_snapshot.tar.gz")
sha256sums=('SKIP')

build() {
  cd $pkgname-$_snapshot
  make build
}

package() {
  cd $pkgname-$_snapshot
  make DESTDIR="$pkgdir" install
}
