_pkgname=deepin-artwork-themes
pkgname=$_pkgname-manjaro
pkgver=20160514
_snapshot=9f97670fb4e96b4fd1439bdc3bf3b88675b61f48
pkgrel=1
pkgdesc='Default artwork themes for Manjaro-Deepin'
arch=('any')
license=('LGPL3')
url="https://github.com/oberon2007/deepin-artwork-themes-manjaro"
depends=('cantarell-fonts'
	'deepin-iconthemes-manjaro'
	'deepin-wallpapers'
	'numix-themes-archblue'
	'xcursor-chameleon-pearl-deepin')
makedepends=('git'
	'python2')
conflicts=('deepin-artwork-themes')
provides=('deepin-artwork-themes')
groups=('deepin-manjaro')
source=("$pkgname-$pkgver-$pkgrel.tar.gz::$url/archive/$_snapshot.tar.gz")
md5sums=('e26257192e2b0413bcfc6b3853270eea')

build() {
  cd $pkgname-$_snapshot
  make build
}

package() {
  cd $pkgname-$_snapshot
  make DESTDIR="$pkgdir" install
}
