# Maintainer: Felix Yan <felixonmars@archlinux.org>
# Contributor: Josip Ponjavic <josipponjavic at gmail dot com>
# Contributor: Xu Fasheng <fasheng.xu[AT]gmail.com>

pkgname=deepin-session-ui-manjaro
pkgver=3.0.15
pkgrel=1
_commit=6076080b5e15907c8c6fe938d93788053ddf7c1b
pkgdesc='Deepin desktop-environment - Session UI module'
arch=('i686' 'x86_64')
url="https://github.com/oberon2007/$pkgname"
license=('GPL3')
depends=('deepin-control-center'
	'deepin-daemon'
	'deepin-tool-kit'
	'gsettings-qt'
	'gtk2'
	'liblightdm-qt5'
	'pam'
	'qt5-svg'
	'startdde'
	'xorg-xrandr')
makedepends=('git'
	'qt5-tools')
groups=('deepin-manjaro')
conflicts=('deepin-manjaro-workspace' 'lightdm-deepin-greeter' 'lightdm-deepin-greeter-manjaro')
provides=('lightdm-deepin-greeter' 'deepin-session-ui')
conflicts=('dde-workspace' 'dde-session-ui' 'deepin-session-ui')
replaces=('dde-workspace' 'dde-session-ui')
source=("git+$url#tag=$pkgver")
#source=("git+$url#commit=$_commit")
sha256sums=('SKIP')

build() {
  cd $pkgname
  qmake-qt5 PREFIX=/usr
  make
}

package() {
  cd $pkgname
  make INSTALL_ROOT="${pkgdir}" install

  ## avoid conflict with dde-daemon https://github.com/linuxdeepin/dde-session-ui/issues/6
  rm $pkgdir/usr/share/applications/deepin-toggle-desktop.desktop
}
