# Maintainer: Bernhard Landauer <oberon@manjaro.org>

pkgname=deepin-iconthemes-manjaro
pkgver=20160130
_repo=deepin-iconthemes
_snapshot=73a622ae3223d25011d0c71141dcb8402f22f9e5
pkgrel=4
pkgdesc="Icon themes for Deepin-Manjaro"
arch=('any')
url="https://github.com/oberon2007/$_repo"
license=('LGPL3')
depends=('deepin-icon-theme'
	'gtk-update-icon-cache')
conflicts=('deepin-icontheme-pack')
provides=('deepin-icontheme-pack')
groups=('deepin-manjaro')
install="$_repo.install"
source=("$pkgname-$pkgver-3.tar.gz::$url/archive/$_snapshot.tar.gz")
md5sums=('4d3cb048c650c38182f836585262a818')

package() {
	cd $_repo-$_snapshot
	install -dm755 $pkgdir/usr/share/icons
	cp -r {Compass,Dalisha} $pkgdir/usr/share/icons
}
