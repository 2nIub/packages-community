# Contributor: Xu Fasheng <fasheng.xu[AT]gmail.com>

pkgname=deepin-session-ui
_pkgname=$pkgname-manjaro
pkgver=4.0.14
pkgrel=1
pkgdesc='Deepin desktop-environment - Session UI module'
arch=('i686' 'x86_64')
url="https://github.com/oberon2007/$_pkgname"
license=('GPL3')
groups=('deepin')
depends=('deepin-control-center'
    'deepin-daemon'
    'deepin-qt-dbus-factory'
    'dtkwidget'
    'gsettings-qt'
    'liblightdm-qt5'
    'qt5-svg'
    'startdde'
    'xorg-xrandr')
makedepends=('git' 'qt5-tools' 'deepin-gettext-tools')
provides=('lightdm-deepin-greeter')
conflicts=('dde-workspace' 'dde-session-ui')
replaces=('dde-workspace' 'dde-session-ui')
source=("$url/archive/$pkgver.tar.gz")
sha512sums=('25eae005f47849149b80e92db7203ec276962ce708a2ec1c7ff31f57645cfc02f46b6720921228415fab086bf0d38d15d5a8ca9b47f19375d1bf9d1541ad5265')

build() {
    cd $_pkgname-$pkgver
    qmake-qt5 PREFIX=/usr
    make
}

package() {
    cd $_pkgname-$pkgver
    make INSTALL_ROOT="$pkgdir" install
}
