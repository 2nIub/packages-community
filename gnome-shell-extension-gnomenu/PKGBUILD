# Maintainer: Stefano Capitani (Ste74) <capitani74atgmaildotcom>
# Autor: The Panacea Project

pkgname=gnome-shell-extension-gnomenu
_pkgname=gno-menu
pkgver=v18
pkgrel=1
pkgdesc="GnoMenu is a traditional styled full featured Gnome-Shell apps-menu, that aims to offer all the essentials in a simple uncluttered intuitive interface."
arch=(any)
url="https://github.com/The-Panacea-Projects/Gnomenu"
license=(GPL3)
depends=('gnome-shell>=3.18' 'gnome-tweak-tool')
makedepends=(git)
install='gnome-shell-extension.install'
source=("https://github.com/The-Panacea-Projects/Gnomenu/archive/$_pkgname.$pkgver.tar.gz")
sha256sums=('7b8c5329b1904de39c935a3902ecb2647964a82df0779f73047b63f845f03b8e')

package() {
	install -dm755 $srcdir/Gnomenu-$_pkgname.$pkgver $pkgdir/usr/share/gnome-shell/extensions/
	cp -r $srcdir/Gnomenu-$_pkgname.$pkgver $pkgdir/usr/share/gnome-shell/extensions/
	mv $pkgdir/usr/share/gnome-shell/extensions/Gnomenu-$_pkgname.$pkgver $pkgdir/usr/share/gnome-shell/extensions/gnomenu@panacier.gmail.com
	cd $pkgdir/usr/share/gnome-shell/extensions/gnomenu@panacier.gmail.com/
        rm -rf .git* Screenshot.png README.md
}

