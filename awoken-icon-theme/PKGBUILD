# Maintainer: Bernhard Landauer <oberon@manjaro.org>
# Contributor: alecive <alecive87@gmail.com>

pkgname=awoken-icon-theme
_pkgname=AwOken
pkgver=2.5
pkgrel=1
pkgdesc="Coloured, dark and white icon sets for GNOME/XFCE/LXDE"
arch=('any')
url="http://alecive.deviantart.com/art/AwOken-163570862"
snapshot=2119c93aa55908c8334dc442dd461c3eace0db45
license=('CCPL:by-sa')
makedepends=('git')
source=$repo-$pkgver.tar.gz::https//github.com/oberon2007/$pkgname/archive/$snapshot.tar.gz
md5sums=('4b574092225e8ef02c61aae231d9123f')

package() {
	cd "$srcdir/$pkgname-$snapshot"
	install -dm755 "$pkgdir/usr/share/icons"
	cp -r AwOken{,Dark,White} $pkgdir/usr/share/icons
	chmod a+r -R $pkgdir/usr/share/icons/AwOken{,Dark,White}
}
