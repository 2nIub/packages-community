pkgname=gtk-theme-e17gtk
pkgver=20140225.2
pkgrel=1
pkgdesc="E17gtk is a dark Gtk theme with sharp corners, which is designed for use in Enlightenment (E17) and gives the elegant look of E17 to Gtk3, Gtk2 and Qt widgets."
arch=('any')
url="http://gnome-look.org/content/show.php/E17gtk?content=163472"
license=('GPL')
depends=('gtk3')
#makedepends=('')
#optdepends=('')
#conflicts=('')
#provides=('')
#replaces=('')
#install="$pkgname".install
source=("http://gnome-look.org/CONTENT/content-files/163472-E17gtk.tar.xz")
sha1sums=('9202a553ca36f7271ed40f43d035c0387d08c4ce')

package() {
  mkdir -p "$pkgdir"/usr/share/themes
  cp -r "$srcdir"/E17gtk "$pkgdir"/usr/share/themes
}
