# Maintainer : Philip MÃ¼ller <philm@manjaro.org>

pkgname=sddm
pkgver=0.10.0
pkgrel=1
pkgdesc="QML based X11 display manager"
arch=('i686' 'x86_64')
url="http://github.com/sddm/sddm"
license=('GPL')
depends=('qt5-declarative' 'upower')
makedepends=('cmake' 'python-docutils' 'qt5-tools')
conflicts=('lightdm' 'sddm-qt5')
replaces=('sddm-qt5')
install='sddm.install'

source=("https://github.com/sddm/sddm/archive/v${pkgver}.tar.gz")
md5sums=('281f920b61b706fbeb07b5397a9bcda2')

build() {
  cd "${pkgname}-${pkgver}"
  mkdir -p build
  cd build
  cmake .. \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_INSTALL_LIBEXECDIR=/usr/lib/sddm \
        -DCMAKE_BUILD_TYPE=Release \
        -DBUILD_MAN_PAGES=ON \
        -DUSE_QT5=true
  make
}

package() {
  cd "${pkgname}-${pkgver}/build"
  make DESTDIR="${pkgdir}" install
}