# Maintainer: Chrysostomus @forum.manjaro.org

pkgname=sterm
pkgver=0.1
pkgrel=1
pkgdesc="Wrapper for st-manjaro and tmux"
arch=(any)
url="https://github.com/Chrysostomus/$pkgname"
license=(MIT)
depends=('terminus-font'
	'xsel'
	'tmux'
	'dash')
makedepends=('git')
source=("git://github.com/Chrysostomus/$pkgname")
md5sums=('SKIP')

package () {
	cd "$srcdir"
	install -dm755 $pkgdir/usr/share/tmux
	cp -r $srcdir/$pkgname/tmux-better-mouse-mode $pkgdir/usr/share/tmux
	chmod +x $pkgdir/usr/share/tmux/tmux-better-mouse-mode/scroll_copy_mode.tmux
	chmod +x $pkgdir/usr/share/tmux/tmux-better-mouse-mode/only_scroll_sometimes.sh
    install -Dm755 "$srcdir/$pkgname/sterm" "$pkgdir/usr/bin/sterm"
    install -Dm644 "$srcdir/$pkgname/tmux.conf" "$pkgdir/etc/skel/.tmux.conf"
}
