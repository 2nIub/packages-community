pkgbase=manjaro-lxqt-settings
pkgname=('manjaro-lxqt-minimal-settings')
#         'manjaro-lxqt-settings')
pkgver=20170205
pkgrel=1
arch=('any')
url="https://github.com/manjaro/manjaro-lxqt-settings"
license=('GPL')
makedepends=('git')
source=("git+$url.git")
sha256sums=('SKIP')

_inst_dir(){
    install -d $pkgdir/etc
    cp -r $srcdir/$pkgbase/$1/skel $pkgdir/etc
}

pkgver() {
    date +%Y%m%d
}

package_manjaro-lxqt-settings() {
    pkgdesc='Manjaro Linux lxqt settings'
    depends=('manjaro-base-skel')
    provides=('manjaro-desktop-settings')
    conflicts=('manjaro-desktop-settings')

    _inst_dir
}

