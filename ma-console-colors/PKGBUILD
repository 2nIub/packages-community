# Maintainer: Bernhard Landauer <oberon@manjaro.org>

pkgname=ma-console-colors
pkgver=0.7.4
pkgrel=1
pkgdesc="Console color scheme for Manjaro-architect"
arch=('any')
license=('GPL')
depends=('systemd')
backup=('etc/systemd/system/getty@.service.d/ma-console.conf')
install="$pkgname.install"
source=("$pkgname"
        "$pkgname.conf"
        "$pkgname@.service"
        'dialogrc')
md5sums=('323804107d47aebbe05a0ccc0938538c'
         'b7f8faff79c47c0a6103e8d5a8bbc073'
         'b8eef353a20dc64945a0b9aff8731c73'
         'a14f5f67982e1f80e32bd637fb03f763')

package() {
    install -Dm755 $pkgname $pkgdir/usr/bin/$pkgname
    install -Dm644 $pkgname@.service $pkgdir/etc/systemd/system/$pkgname@.service
    install -Dm644 $pkgname.conf $pkgdir/etc/systemd/system/getty@.service.d/$pkgname.conf
    install -Dm644 dialogrc $pkgdir/etc/skel/.dialogrc
}
