# Maintainer: Bernhard Landauer <oberon@manjaro.org>
# Maintainer: tnaker

pkgname=xcursor-breeze
pkgver=5.10.5
pkgrel=2
pkgdesc="KDE5 cursor theme"
url="http://kde-look.org/content/show.php/Breeze?content=165371"
depends=('libxcursor')
license=('GPL')
arch=(any)
provides=('breeze-snow-cursor-theme') 
source=('http://download.kde.org/stable/plasma/5.10.5/breeze-5.10.5.tar.xz'
    'thumbnail.png')
md5sums=('f78318b14525ed3a56e33f4f24e5cd04'
         '95cdec50172cb19de79ea1a980e9c0fb')

package() {
    install -dm755 "$pkgdir"/usr/share/icons/
    cp -r "$srcdir"/breeze-${pkgver}/cursors/Breeze/Breeze "$pkgdir"/usr/share/icons/
    cp -r "$srcdir"/breeze-${pkgver}/cursors/Breeze_Snow/Breeze_Snow "$pkgdir"/usr/share/icons/
    cp $srcdir/thumbnail.png $pkgdir/usr/share/icons/Breeze/cursors
}
