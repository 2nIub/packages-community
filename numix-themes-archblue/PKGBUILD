# Maintainer: Bernhard Landauer <oberon@manjaro.org>
# Contributor: Nikita Sivakov <cryptomaniac.512@gmail.com>

pkgname=numix-themes-archblue
pkgver=2.5.1
pkgrel=3
pkgdesc='A flat and light theme with a modern look using Arch Linux colors (GNOME, Openbox, Unity, Xfce)'
arch=('any')
url='https://github.com/oberon2007/numix-themes-archblue'
license=('GPL3')
depends=('gtk-engine-murrine')
makedepends=('git')
source=("git+$url.git")

md5sums=('SKIP')

package() {
  cd $pkgname

  install -dm 755 $pkgdir/usr/share/themes
  cp -dr --no-preserve='ownership' Numix-ArchBlue $pkgdir/usr/share/themes
}
