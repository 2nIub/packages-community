pkgbase='mjro-box-settings'
pkgname='manjaro-openbox-settings'
pkgver=20171001
pkgrel=1
arch=('any')
url="https://github.com/fhdk/mjro-box-settings"
license=('GPL')
makedepends=('git')
source=("git+$url.git")
sha256sums=('SKIP')

_inst_dir(){
    install -d $pkgdir/etc
    cp -r $srcdir/$pkgbase/skel $pkgdir/etc
    install -d $pkgdir/usr/share
    cp -r $srcdir/$pkgbase/backgrounds $pkgdir/usr/share
}

pkgver() {
    date +%Y%m%d
}

package_manjaro-openbox-settings() {
    pkgdesc='Manjaro Linux openbox settings'
#    depends=('manjaro-base-skel'
#             'xcursor-breeze'
#             'breath-icon-theme'
#             'breath-wallpaper'
#             'gtk-theme-breath')
    conflicts=('manjaro-openbox-settings')
    replaces=('manjaro-openbox-settings')
    provides=('manjaro-desktop-settings')
    conflicts=('manjaro-desktop-settings')
    _inst_dir
}
