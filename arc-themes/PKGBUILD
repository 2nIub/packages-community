pkgname=arc-themes
_pkgname=arc-theme
pkgver=20160209
pkgrel=1
pkgdesc='A flat theme with transparent elements (GNOME 3.18 version)'
_gnomever=3.18
_releasever=92a502dfba2cd9a0142c10ed332f17b35a71abd0
arch=('any')
url='https://github.com/horst3180/arc-theme'
license=('GPL3')
depends=('gtk3' 'gtk-engine-murrine')
conflicts=('gtk-theme-arc' 'gtk-theme-arc-git')
source=("${pkgname}-${_releasever}.tar.gz::https://github.com/horst3180/${_pkgname}/archive/${_releasever}.tar.gz")
sha256sums=('b9df9808407854acff08103f43b17194e9461e97a20b70b0eeb58974bb0623b1')

build() {
  cd "${_pkgname}-$_releasever"
  ./autogen.sh --prefix=/usr --with-gnome=${_gnomever}
}
package() {
  make -C "${_pkgname}-$_releasever" DESTDIR="${pkgdir}" install
}

