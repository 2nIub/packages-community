# Maintainer: fhdk <fh[t]manjaro[t]org>

pkgbase='mjro-box-utils'
pkgname='manjaro-openbox-utilities'
pkgver=20171001
pkgrel=1
arch=('any')
url="https://github.com/fhdk/mjro-box-utils"
license=('GPL')
makedepends=('git')
source=("git+$url.git")
sha256sums=('SKIP')

_inst_dir(){
    install -d $pkgdir/usr/local
    cp -r $srcdir/$pkgbase/bin $pkgdir/usr/local

    install -d $pkgdir/usr/local/share/box
    cp -r $srcdir/$pkgbase/docs $pkgdir/usr/local/share/box
}

pkgver() {
    date +%Y%m%d
}

package_manjaro-openbox-utilities() {
    pkgdesc='Manjaro Linux openbox utilites'
    depends=()
    _inst_dir
}
