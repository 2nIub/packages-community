# Maintainer: Bernhard Landauer <oberon@manjaro.org>

pkgname=deepin-manjaro-artwork-theme
pkgver="$(date +'%Y%m%d')"
pkgrel=1
pkgdesc='Artwork theme for manjaro-deepin'
arch=('any')
license=('GPL')
url="github.com/oberon2007"
depends=('cantarell-fonts'
	'deepin-icontheme-pack'
	'deepin-wallpapers'
	'xcursor-chameleon-pearl-deepin')
makedepends=('git')
conflicts=('deepin-artwork-themes')
source=("git://$url/$pkgname.git")
md5sums=('SKIP')

package() {
	cd $srcdir/$pkgname
	install -dm755 $pkgdir/usr/share
	cp -R personalization $pkgdir/usr/share
}
