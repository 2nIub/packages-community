# Maintainer: Stefano Capitani <stefano@manjaro.org>

pkgname=sudo-$_pkgname
_pkgname=calamares
pkgver=1.0
pkgrel=1
pkgdesc="Workaround for Calamares to use 'sudo' instead 'pkexec'into Gnome and Budgie"
arch=('any')
url="https://github.com/calamares"
license=('GPL')
source=("$_pkgname.desktop")
depends=("${_pkgname}")
md5sums=('4a2cdf5e840a30e8a7bdf642d8c1644f')

package() {
  mkdir -p "$pkgdir/usr/share/applications/"
  install -Dm644 $_pkgname.desktop "$pkgdir/usr/share/applications/$_pkgname.desktop"
}
