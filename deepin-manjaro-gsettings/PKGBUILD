# Maintainer: Bernhard Landauer <oberon@manjaro.org>

pkgname=deepin-manjaro-gsettings
pkgver=20151114
pkgrel=1
_srcdirname=$pkgname-$pkgver
pkgdesc='deepin-manjaro default gsettings'
arch=('any')
url="https://github.com/oberon2007/$pkgname"
license=('GPL3')
depends=('dde-dock-applets'
# 'deepin-manjaro-dock-applets'
	'deepin-gtk-theme'
	'deepin-icon-theme'
	'deepin-icontheme-pack'
	'deepin-wallpapers'
# 'startdde-manjaro'
	'startdde-manjaro')
makedepends=('git')
install=$pkgname.install
source=("$_srcdirname::git+$url")
conflicts=('deepin-default-gsettings')
md5sums=('SKIP')

prepare() {
  cd $_srcdirname
  cat *.override >> gsettings-override
}

package() {
  cd $_srcdirname

  install -dm 755 $pkgdir/usr/share/glib-2.0/schemas
  install -m 644 gsettings-override $pkgdir/usr/share/glib-2.0/schemas/99_$pkgname.gschema.override
}
