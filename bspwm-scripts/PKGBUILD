# Maintainer: Chrysostomus @forum.manjaro.org

pkgname=bspwm-scripts
pkgver=0.8
pkgrel=1
pkgdesc="Scripts for controlling bspwm"
arch=(any)
url="https://github.com/Chrysostomus/$pkgname"
license=("MIT")
depends=('dmenu-manjaro' 'bspwm' 'sxhkd' 'xdotool' 'wmctrl' 'wmutils' 'xorg-xdpyinfo' 'xtitle' 'xwinfo' 'xdo')
makedepends=('git')
source=("git://github.com/Chrysostomus/$pkgname")
md5sums=('SKIP')

package () {
  cd "$srcdir"
  install -Dm755 "$srcdir/$pkgname/MouseCenter" "$pkgdir/usr/bin/MouseCenter"
  install -m755 "$srcdir/$pkgname/MouseLaunch" "$pkgdir/usr/bin/"
  install -m755 "$srcdir/$pkgname/WindowSelector" "$pkgdir/usr/bin/"
  install -m755 "$srcdir/$pkgname/swapOrMoveIn.sh" "$pkgdir/usr/bin/"
  install -m755 "$srcdir/$pkgname/autogap" "$pkgdir/usr/bin/"
  install -m755 "$srcdir/$pkgname/application_switcher" "$pkgdir/usr/bin/"
  install -m755 "$srcdir/$pkgname/auto-presel" "$pkgdir/usr/bin/"
  install -m755 "$srcdir/$pkgname/bspcp" "$pkgdir/usr/bin/"
  install -m755 "$srcdir/$pkgname/bspwm_move.sh" "$pkgdir/usr/bin/"
  install -m755 "$srcdir/$pkgname/bspwm_rename_desktop" "$pkgdir/usr/bin/"
  install -m755 "$srcdir/$pkgname/bspwm_resize.sh" "$pkgdir/usr/bin/"
  install -m755 "$srcdir/$pkgname/dboxmenu" "$pkgdir/usr/bin/"
  install -m755 "$srcdir/$pkgname/dboxrun" "$pkgdir/usr/bin/"
  install -m755 "$srcdir/$pkgname/get-window-alignment" "$pkgdir/usr/bin/"
  install -m755 "$srcdir/$pkgname/toggle-pointer-follows-focus" "$pkgdir/usr/bin/"
  install -m755 "$srcdir/$pkgname/toggle-focus-follows-pointer" "$pkgdir/usr/bin/"
  install -m755 "$srcdir/$pkgname/whid" "$pkgdir/usr/bin/"
  install -m755 "$srcdir/$pkgname/workspaces_multimonitor" "$pkgdir/usr/bin/"
  install -m755 "$srcdir/$pkgname/clickpasser" "$pkgdir/usr/bin/"
  install -m755 "$srcdir/$pkgname/dmenu_recent" "$pkgdir/usr/bin/"
  install -m755 "$srcdir/$pkgname/finder" "$pkgdir/usr/bin/"
  install -m755 "$srcdir/$pkgname/summondesktop.sh" "$pkgdir/usr/bin/"
  install -m755 "$srcdir/$pkgname/smartsplit" "$pkgdir/usr/bin/"
  install -m755 "$srcdir/$pkgname/i3lock-wait-for-suspend" "$pkgdir/usr/bin/"
  install -m755 "$srcdir/$pkgname/screenlock" "$pkgdir/usr/bin/"
  install -Dm755 "$srcdir/$pkgname/99-monitor-hotplug-rules" "$pkgdir/etc/udev/rules.d/99-monitor-hotplug-rules"
}
