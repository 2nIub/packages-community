# MWHD config script

## SCRIPT INFO

NAME="video-amdgpu-experimental+"
INFO="Experiemtal AMDGPU support for GCN Gen 1 and Gen 2"
VERSION="2017.06.02"
FREEDRIVER="true"
PRIORITY="1"


## HARDWARE SUPPORT

CLASSIDS="0300 0380"
VENDORIDS="1002"
DEVICEIDS=">/var/lib/mhwd/ids/pci/amdgpu_exp.ids"


## DEPENDENCIES

DEPENDS="amdgpu-experimental xf86-video-amdgpu vulkan-radeon libva-mesa-driver libva-vdpau-driver mesa-vdpau"
DEPENDS_64="lib32-vulkan-radeon lib32-libva-vdpau-driver lib32-mesa-vdpau"


## MHWD AND PACMAN COMFLICTS

MHWDCONFLICTS="video-intel video-amdgpu video-ati video-catalyst video-vesa"
CONFLICTS="opencl-catalyst catalyst-video catalyst-utils-openrc catalyst-utils catalyst-server catalyst-input"


## MWHD FUNCTIONS / SCRIPS

post_install()
{
    mhwd-gpu --check
}

post_remove()
{
    mhwd-gpu --check
}
