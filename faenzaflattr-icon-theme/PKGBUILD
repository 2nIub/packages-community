}

package_faenzaflattr-darkplasma-icon-theme() {
  pkgdesc='A mix of Faenza and Flattr icon theme for KDE. Dark plasma variant.'
  install -d $pkgdir/usr/share/icons
  install -Dm644 $srcdir/${_pkgname}-DarkPlasma/LICENSE.txt $pkgdir/usr/share/licenses/${_pkgname}-DarkPlasma/LICENSE  
  cp -r $srcdir/${_pkgname}-DarkPlasma $pkgdir/usr/share/icons/
  rm $pkgdir/usr/share/icons/${_pkgname}-DarkPlasma/categories/scalable/prefernces-system-network.svg  
  ln -f -s cmake-gui.svg $pkgdir/usr/share/icons/${_pkgname}-DarkPlasma/apps/scalable/cmake.svg 
  ln -f -s ../../apps/scalable/clementine-panel.svg $pkgdir/usr/share/icons/${_pkgname}-DarkPlasma/status/scalable/clementine-panel.svg   
  find $pkgdir/usr -type f -exec chmod 644 {} \;
  find $pkgdir/usr -type d -exec chmod 755 {} \;
  find $pkgdir/usr -type f -name '.directory' -delete
}

