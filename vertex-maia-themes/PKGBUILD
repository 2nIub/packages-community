pkgname=vertex-maia-themes
pkgver=20160202
pkgrel=2
pkgdesc='Vertex themes adjusted to match maia icon theme'
arch=('any')
url="http://github.com/oberon2007/$pkgname"
license=('GPL3')
depends=('gtk-engine-murrine')
source=("git+$url.git")
sha256sums=('SKIP')

package() {
	cd $pkgname
	install -dm755 $pkgdir/usr/share/themes
	cp -r Vertex-Maia $pkgdir/usr/share/themes
}
