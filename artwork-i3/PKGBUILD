# Maintainer: Bernhard Landauer <oberon@manjaro.org>

pkgname=artwork-i3
pkgver=20160216
pkgrel=1
pkgdesc="Wallpapers and avatars for manjaro-i3"
arch=(any)
license=(GPL3)
url="https://github.com/oberon2007/$pkgname"
_snapshot=1b02520ff758f318f813a08d6589fd7fdcbf874a
conflicts=('i3-wallpapers')
source=("$pkgname-$pkgver.tar.gz::$url/archive/$_snapshot.tar.gz")
md5sums=('cd6f340e1f37640912d42e6dc32948a0')

package() {
	cd $srcdir/$pkgname-$_snapshot
	install -dm755 $pkgdir/usr/share
	cp -r * $pkgdir/usr/share
}
