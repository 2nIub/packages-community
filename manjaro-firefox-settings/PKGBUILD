pkgname=manjaro-firefox-settings
pkgver=20160314
pkgrel=1
pkgdesc="Manjaro Linux settings for Firefox and Palemoon"
arch=('any')
url="https://github.com/manjaro/manjaro-firefox-settings"
license=('GPL')
_gitcommit=44f020ec303776caa6fc1b2e96724acc6f6ca78d
source=("manjaro-firefox-settings-$_gitcommit.tar.gz::$url/archive/$_gitcommit.tar.gz")
md5sums=('8f87dd034a61f02251d60dee4ebdf239')

pkgver() {
  date +%Y%m%d
}

package() {
  install -Dm755 "${srcdir}/${pkgname}-${_gitcommit}/distribution.ini"\
	"${pkgdir}/usr/lib/firefox/distribution/distribution.ini"
  install -Dm755 "${srcdir}/${pkgname}-${_gitcommit}/distribution.ini"\
	"${pkgdir}/usr/lib/palemoon/distribution/distribution.ini"
}
