arch=('any')
url="https://github.com/Ste74/$_repo"
license=('GPL')
source=("$_repo-$_snapshot.tar.gz::$url/archive/$_snapshot.tar.gz")
sha256sums=('4b7c3b018f61a82bb54540445d90690f3b71b5ea82574231cdd10a132a07aea3')

pkgver() {
	date +%Y%m%d
}

package(){
	install -d $pkgdir/usr/share/backgrounds
	install $srcdir/${_pkgname} $pkgdir/usr/share/backgrounds
}
