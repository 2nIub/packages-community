# Maintainer: Bernhard Landauer <oberon@manjaro.org>

pkgname=ff-theme-util
pkgver=1.0
pkgrel=2
pkgdesc="Utility to autocreate matching Firefox-theme symlinks"
arch=('any')
depends=('inotify-tools')
source=('ff-theme-util'
    'ff-theme-util.desktop')
md5sums=('92f42c72104f7545c800c1ea055182de'
         'edded55fe9b76bf695885c1372fbcbf6')

package() {
    install -Dm755 ff-theme-util $pkgdir/usr/bin/ff-theme-util
    install -Dm644 ff-theme-util.desktop $pkgdir/etc/skel/.config/autostart/ff-theme-util.desktop
}
