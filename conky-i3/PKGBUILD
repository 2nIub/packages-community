# Maintainer: Bernhard Landauer <oberon@manjaro.org>

pkgname=conky-i3
pkgver=20151103
pkgrel=1
pkgdesc="grey or green Conky for manjaro-i3"
_repo=conkies
url=github.com/oberon2007/$_repo

arch=any
license=GPL
depends=('conky>=1.10'
	'ttf-bitstream-vera')
conflicts=('lua-clock-manjaro'
	'lua-clock-i3')
backup=('usr/share/conky/conky_green'
	'usr/share/conky/conky_grey'
	'usr/share/conky/conky1.10_shortcuts_green'
	'usr/share/conky/conky1.10_shortcuts_grey')
source=("git://$url.git")
md5sums=('SKIP')

package() {
	cd $srcdir/$_repo

	install -Dm644 conky_green $pkgdir/usr/share/conky/conky_green
	install -Dm644 conky_grey $pkgdir/usr/share/conky/conky_grey
	install -Dm644 conky1.10_shortcuts_green $pkgdir/usr/share/conky/conky1.10_shortcuts_green
	install -Dm644 conky1.10_shortcuts_grey $pkgdir/usr/share/conky/conky1.10_shortcuts_grey
	install -Dm755 start-scripts-i3/start_conky_green ${pkgdir}/usr/bin/start_conky_green
	install -Dm755 start-scripts-i3/start_conky_grey ${pkgdir}/usr/bin/start_conky_grey
}
