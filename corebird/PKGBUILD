# Maintainer: Carlos Silva <r3pek@r3pek.org>

pkgname=corebird
pkgver=1.1
pkgrel=1
pkgdesc="Native Gtk+ Twitter Client"
arch=('i686' 'x86_64')
license=('GPL')
url="https://github.com/baedert/corebird"
depends=('glib2>=2.40'
	'gstreamer'
	'gst-libav'
	'gst-plugins-bad'
	'gst-plugins-good'
	'gtk3>=3.14'
	'intltool>=0.40'
	'json-glib'
	'libgee>=0.8'
	'librsvg'
	'libsoup>=2.4'
	'libtool'
	'rest>=0.7'
	'sqlite3')
makedepends=('vala>=0.26')
source=(https://github.com/baedert/corebird/archive/${pkgver}.tar.gz)
sha1sums=('0b72bd81bd906c8a6f3d68c0ee6b045d51ef9c0f')
install=corebird.install

build() {
  cd corebird-${pkgver}
  # Add --disable-video here if you don't like the gstreamer deps
  ./autogen.sh --prefix=/usr
  make
}

package() {
  cd corebird-${pkgver}
  make DESTDIR=$pkgdir install
}
