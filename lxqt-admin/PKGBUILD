# Maintainer: Jerome Leclanche <jerome@leclan.ch>
# Contributor: Matthew Stobbs <matthew@stobbstechnical.com>

pkgname=lxqt-admin
pkgver=0.10.0
pkgrel=0.2
pkgdesc="LXQt system administration"
arch=('i686' 'x86_64')
url='http://lxqt.org'
license=('GPL2')
groups=('lxqt')
depends=('liblxqt' 'liboobs')
makedepends=('cmake' 'qt5-tools')
source=("https://github.com/lxde/lxqt-admin/archive/$pkgver.tar.gz")
sha256sums=('16f483ee3c77c19604b6041f4480b7f39a85f42a9a2fa2feb9866821cd3a4624')

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../$pkgname-$pkgver \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir" install
}
