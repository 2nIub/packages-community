# Contributor: Antonio Rojas

pkgname=lxqt-panel
pkgver=0.9.0
pkgrel=0.1
pkgdesc="LXQt desktop panel"
arch=('i686' 'x86_64')
url='http://lxqt.org/'
license=('LGPL')
groups=('lxqt')
depends=('lxqt-globalkeys' 'liblxqt-mount' 'icu' 'lm_sensors' 'libpulse' 'libsysstat' 'menu-cache' 'lxmenu-data' 'libxcomposite' 'kwindowsystem' 'kguiaddons' 'libstatgrab')
makedepends=('cmake' 'qt5-tools')
source=("http://lxqt.org/downloads/lxqt/$pkgver/$pkgname-$pkgver.tar.xz")
sha256sums=('96b2c2f1b7de7605ac79f094936e6fcf8f0034342e11d84624a033f2450f6bf1')

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../$pkgname-$pkgver \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_INSTALL_LIBDIR=lib
  make
}

package() {
  cd build
  make DESTDIR="$pkgdir" install
}
