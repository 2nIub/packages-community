# Maintainer: Bernhard Landauer <oberon@manjaro.org>

pkgname=artwork-cinnamon-minimal
_repo=cinnamon-wallpapers
pkgver=20160223
pkgrel=1
pkgdesc="Wallpapers for Manjaro Cinnamon"
arch=('any')
license=('GPL3')
url="https://github.com/oberon2007/$_repo"
_snapshot=f65fd1072f5b6b6f3732589b848290a54fa57a75
optdepends=('cinnamon-wallpapers: more wallpapers for Manjaro Cinnamon')
source=("$_repo-$_snapshot.tar.gz::$url/archive/$_snapshot.tar.gz")
md5sums=('')

package() {
	cd $srcdir/$_repo-$_snapshot
	install -dm755 $pkgdir/usr/share
	cp -r * $pkgdir/usr/share
}
