pkgname=cinnamon-power-applet
pkgver=20$(date +%y%m%d)
pkgrel=1
pkgdesc="Cinnamon Power Applet compatible with upower-0.99"
arch=('any')
url="https://github.com/robin92/cinnamon-power-applet"
license=('GPL')
groups=('cinnamon-applets')
depends=('cinnamon' 'upower')
makedepends=('git')
source=("git+https://github.com/robin92/cinnamon-power-applet.git")
md5sums=('SKIP')

package() {
  cd $srcdir/$pkgname
  ls
  find power\@airlog.pisz.pl -type f -exec install -Dm644 '{}' "$pkgdir/usr/share/cinnamon/applets/{}" \;
}
